{
  "name": "farmapp-api",
  "version": "1.0.0",
  "type": "module",
  "description": "A TypeScript API with MongoDB connectivity",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" nodemon src/server.ts",
    "build": "tsc",
    "prebuild": "rimraf dist",
    "start:prod": "npm run build && npm start",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^4.17.1",
    "mongoose": "^5.10.9"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "license": "MIT"
}